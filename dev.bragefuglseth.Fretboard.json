{
    "app-id" : "dev.bragefuglseth.Fretboard",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "46",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "fretboard",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
	  "name": "blueprint-compiler",
	  "buildsystem": "meson",
	  "cleanup": ["*"],
	  "sources": [
	    {
	      "type": "git",
	      "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
	      "tag": "v0.10.0"
	    }
	  ]
	},
        {
            "name" : "fretboard",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dprofile=default"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/bragefuglseth/fretboard.git",
                    "tag" : "v7.0",
                    "commit" : "56562128cf507747eb106c4fb1705980d5cf6c16"
                },
                "cargo-sources.json"
            ]
        }
    ]
}
